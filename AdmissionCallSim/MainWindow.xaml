<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Custom="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" x:Class="AdmissionCallSim.MainWindow"
        Title="MainWindow" Height="840" Width="1298">
    <Grid Background="#FF2C3E50">
        <Custom:Ribbon VerticalAlignment="Top">
            <Custom:RibbonTab Header="Phone">
                <Custom:RibbonGroup>
                    <Custom:RibbonGroup.Background>
                        <ImageBrush/>
                    </Custom:RibbonGroup.Background>
                    <Custom:RibbonToggleButton Height="45" Width="45" Margin="10,15,10,-10" >
                        <Custom:RibbonToggleButton.PressedBackground>
                            <ImageBrush ImageSource="Images/plus.png"/>
                        </Custom:RibbonToggleButton.PressedBackground>
                        <Custom:RibbonToggleButton.CheckedBackground>
                            <ImageBrush ImageSource="Images/plus.png"/>
                        </Custom:RibbonToggleButton.CheckedBackground>
                        <Custom:RibbonToggleButton.FocusedBackground>
                            <ImageBrush ImageSource="Images/plus.png"/>
                        </Custom:RibbonToggleButton.FocusedBackground>
                        <Custom:RibbonToggleButton.MouseOverBackground>
                            <ImageBrush ImageSource="Images/plus.png"/>
                        </Custom:RibbonToggleButton.MouseOverBackground>
                        <Custom:RibbonToggleButton.Background>
                            <ImageBrush ImageSource="Images/plus.png"/>
                        </Custom:RibbonToggleButton.Background>
                    </Custom:RibbonToggleButton>
                    <Custom:RibbonToggleButton Height="45" Width="45" Margin="10,15,10,-10" >
                        <Custom:RibbonToggleButton.PressedBackground>
                            <ImageBrush ImageSource="Images/minus.png"/>
                        </Custom:RibbonToggleButton.PressedBackground>
                        <Custom:RibbonToggleButton.MouseOverBackground>
                            <ImageBrush ImageSource="Images/minus.png"/>
                        </Custom:RibbonToggleButton.MouseOverBackground>
                        <Custom:RibbonToggleButton.FocusedBackground>
                            <ImageBrush ImageSource="Images/minus.png"/>
                        </Custom:RibbonToggleButton.FocusedBackground>
                        <Custom:RibbonToggleButton.CheckedBackground>
                            <ImageBrush ImageSource="Images/minus.png"/>
                        </Custom:RibbonToggleButton.CheckedBackground>
                        <Custom:RibbonToggleButton.Background>
                            <ImageBrush ImageSource="Images/minus.png"/>
                        </Custom:RibbonToggleButton.Background>
                    </Custom:RibbonToggleButton>
                </Custom:RibbonGroup>
                
            </Custom:RibbonTab>
            <Custom:RibbonTab Header="Antena">

            </Custom:RibbonTab>
        </Custom:Ribbon>
        <Canvas x:Name="canvas" Background="White" Margin="0,137,218,0" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove">
            <Canvas Height="300" Canvas.Left="398" Canvas.Top="184" Width="300">
                <Ellipse Fill="#FFF4F4F5" Stroke="Black" Width="300" Height="300"/>
                <Image Height="100" Width="100" Source="Images/antena.png" Canvas.Top="96" Canvas.Left="100"/>
            </Canvas>
            <Image Height="80" Canvas.Left="196" Canvas.Top="211" Width="80" Source="Images/phone.png" MaxWidth="80" MaxHeight="80" AllowDrop="True" Focusable="True" Panel.ZIndex="50"/>
        </Canvas>




    </Grid>
</Window>
